{
  "extends": ["stylelint-prettier/recommended"],
  "plugins": [
    "stylelint-scss",
    "stylelint-prettier"
  ],
  "rules": {
    "prettier/prettier": [
      true,
      {
        "singleQuote": true
      }
    ],
    "at-rule-no-unknown": [null, {
      "ignoreAtRules": ["xl"]
    }],
    "string-quotes": "single",
    "unit-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "max-empty-lines": 2,
    "indentation": 4,
    "no-descending-specificity": null
  }
}
